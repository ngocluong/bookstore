<% if @user.errors.any? %>
  $('#registration .error').html('<%= escape_javascript(render('errors', user: @user)) %>')
<% else %>
  $('.container').html('<%= escape_javascript(render('success', path: @after_sign_up_path)) %>')
  $('#signUpModal').modal('hide');
  $('#signInModal').modal('hide');
  $('#signUpSucc .modal-body').html('<%= flash[:notice] %>')
  $('#signUpSucc').modal('show');
<% end %>
