<% if @user.errors.any? %>
  $('#registration .error').html('<%= j(render('errors', user: @user)) %>')
<% else %>
  $('.container').html('<%= j(render('success', path: @after_sign_up_path)) %>')
  $('#sign-up-modal').modal('hide');
  $('#sign-in-modal').modal('hide');
  $('#sign-up-success .modal-body').html('<%= flash[:notice] %>')
  $('#sign-up-success').modal('show');
<% end %>
